<div class="container">
  <%= form_for(@article) do |f| %>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <p>by: <%= current_user.last_name %></p>

  <div class="field">
    <%= f.label :body %><br/>
    <%= f.text_area :body, cols: 30, rows: 10%>
  </div>

  <div class="field">
    <%= f.label :newsletter %><br>
    <%= f.collection_select :newsletter_id, Newsletter.all, :id, :title, include_blank: "Newsletter"  -%>
  </div>

  <div class="field">
    <%= f.label :photo %><br/>
    <%= f.file_field :photo %>
  </div>

  <div class="main">
  <button class="button">Create</button>


  <div class="loader">
    <div class="check">
      <span class="check-one"></span>
      <span class="check-two"></span>
    </div>
  </div>

</div>


<% end %>
</div>
