<%= form_for(@event) do |f| %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title%>
</div>

<div class="field">
  <%= f.label :date %>
  <%= f.date_field :date %>
</div>

<div class="field">
  <%= f.label :body %><br>
  <%= f.text_area :body, cols: 30, rows: 10%>
</div>

<div class="field">
  <%= f.label :newsletter %><br>
  <%= f.collection_select :newsletter_id, Newsletter.all, :id, :sub_title, include_blank: "Newsletter" -%>
</div>

<div class="field">
  <%= f.label :photo %><br>
  <%= f.file_field :photo %>
</div>

<div class="vintage-container">
  <button class="button">Submit</button>

  <div class="loader">
    <div class="check">
      <span class="check-one"></span>
      <span class="check-two"></span>
    </div>
  </div>
</div>

<% end %>
